<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:gravity="left"
    android:orientation="vertical"
    tools:context=".ActualizarContrasena">

    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/color_login"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingStart="5dp"
                    app:srcCompat="@drawable/logotodes" />

                <TextView
                    android:id="@+id/tviniciosesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|end"
                    android:text=" Recuperar Contraseña"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>


            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/shadow_header"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/contenedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="60dp"
                    android:background="@drawable/bordes"
                    android:ems="10"
                    android:hint="Correo electrónico"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp" />


                <Button
                    android:id="@+id/btActualizar"
                    android:layout_width="126dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_margin="50dp"
                    android:background="@drawable/botton"
                    android:text="enviar" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>

