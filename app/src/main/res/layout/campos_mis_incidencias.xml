<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

  </LinearLayout>

  <TextView
      android:id="@+id/id_text_nombre_apellido"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:hint="nombre y apellidos">

  </TextView>

  <TextView
      android:id="@+id/id_text_edad"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/id_text_nombre_apellido"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="20dp"
      android:hint="edad">

  </TextView>

  <TextView
      android:id="@+id/id_text_hora"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/id_text_edad"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="20dp"
      android:hint="hora">

  </TextView>

  <TextView
      android:id="@+id/id_text_fecha"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/id_text_hora"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="20dp"
      android:hint="fecha">

  </TextView>

  <TextView
      android:id="@+id/id_text_ubicacion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="120dp"
      android:layout_marginBottom="20dp"
      android:hint="ubicacion">

  </TextView>

  <TextView
      android:id="@+id/id_text_descripcion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:hint="descripcion">

  </TextView>


</RelativeLayout>