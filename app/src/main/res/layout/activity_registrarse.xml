<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrarseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <LinearLayout
        android:id="@+id/lEnunciados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_login"
        android:gravity="center"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvFlecha"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/ic_action_flecha"
        android:drawableTint="@color/white"
        android:onClick="InicioSesion" />
</LinearLayout>


        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingStart="5dp"
            app:srcCompat="@drawable/logotodes" />

        <TextView
            android:id="@+id/tviniciosesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:text=" Registrarse"
            android:textColor="@color/white"
            android:textSize="28dp"/>

    </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/lsecundario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/shadow_header"
        android:gravity="center"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="30dp"
    android:gravity="center">


    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bordes"
        android:hint="Digite correo electrónico"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/oscuromorado2"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bordes"
        android:ems="10"
        android:hint="Digite su contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/oscuromorado2"

        android:textSize="15dp" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/bordes"
        android:ems="10"
        android:hint="Confirme su contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/oscuromorado2"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btGuardar"
        style="@style/Theme.Android_Todes"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/botton"
        app:backgroundTint="@null"
        android:onClick="InicioSesion"
        android:text="REGISTRARSE" />

</LinearLayout>
    </ScrollView>

    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>