<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.coml/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_form_inicidencia"
    tools:context=".FormActivityDenuncia">


    <LinearLayout
        android:id="@+id/linearLayoutTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="24"
                android:text="No hay informaci贸n de la victima"
                android:textAlignment="center"
                android:textColor="#090808"
                android:textSize="16sp"
                android:textStyle="bold" />
             </LinearLayout>
        <TextView
            android:id="@+id/textViewSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Te recomendamos suministrar la mayor informaci贸n posible "
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutTextview"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:id="@+id/linearLayoutCamposForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="80dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imagen_para_incidencia">

                <ImageView
                    android:id="@+id/imagen_para_incidencia"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTextview"
                    app:srcCompat="@drawable/ic_admin"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/editNombreIncidencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:hint="Nombre incidencia"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/editLugar"
                    app:layout_constraintStart_toStartOf="@+id/editLugar" />

                <EditText
                    android:id="@+id/editLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:hint="Lugar"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName14"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName14"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="320dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/TextFecha"
                        android:layout_width="280dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:hint="dd/mm/aa"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName16"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName16" />

                    <Button
                        android:id="@+id/buttonFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="0dp"
                        android:text="FECHA"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/Descripcion_de_incidencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:hint="Descripci贸n de la situaci贸n"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_ir_galery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_galeria_foreground"
                        android:layout_marginEnd="200dp"
                        app:maxImageSize="30dp" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_ir_camara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camara_foreground"
                        app:maxImageSize="30dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Send"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.924"
                    app:layout_constraintVertical_bias="0.222" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</RelativeLayout>