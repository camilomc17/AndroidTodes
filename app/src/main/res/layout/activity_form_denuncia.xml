<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.coml/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_form_inicidencia"
    tools:context=".FormActivityDenuncia">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            app2:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Te recomendamos suministrar la mayor informaci贸n posible "
                android:textAlignment="center"
                android:textColor="#090909"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="No hay informaci贸n de la victima"
                    android:textAlignment="center"
                    android:textColor="#090808"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutTextview"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/linearLayoutTextview">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:id="@+id/linearLayoutCamposForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/imagen_para_incidencia">


                    <EditText
                        android:id="@+id/editNombreIncidencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:hint="Nombre incidencia"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="@+id/editLugar"
                        app:layout_constraintStart_toStartOf="@+id/editLugar" />

                    <EditText
                        android:id="@+id/editLugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:hint="Lugar"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName14"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName14"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="320dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/TextFecha"
                            android:layout_width="298dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="                        dd/mm/aa"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName16"
                            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName16" />

                        <Button
                            android:id="@+id/buttonFecha"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="0dp"
                            app2:icon="@drawable/ic_calendar_diligencia"
                            app2:iconSize="30dp"
                            app2:iconTint="#0B0A0A" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/Descripcion_de_incidencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:hint="Descripci贸n de la situaci贸n"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/imagen_para_incidencia"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_image_diligencia"
                        tools:layout_editor_absoluteX="16dp" />


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app2:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_ir_galery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_galeria_foreground"
                app2:maxImageSize="30dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_ir_camara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@drawable/ic_camara_foreground"
                app2:maxImageSize="30dp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>