<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenuBotones">

    <!-- xmlns:fab="http://schemas.android.com/apk/res-auto"  Importacion de la Libreria Para el menu de botones -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/MenuPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            app:menu_fab_label="Menu"
            fab:menu_colorNormal="@color/azulfront"
            fab:menu_colorPressed="@color/moradofront"
            fab:menu_labels_textColor="@color/white"
            fab:menu_labels_showShadow="false"
            fab:menu_labels_cornerRadius="10dp"

            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnMiPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_users"
                app:fab_label="Mi Perfil"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnEventos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="IrEvento"
                android:src="@drawable/ic__events"
                app:fab_label="Eventos"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnMisReportes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_myreports"
                app:fab_label="Mis Reportes"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/CrearReporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_newreport"
                app:fab_label="Crear Reportes"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnAyuda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_help"
                app:fab_label="Ayuda"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logout"
                app:fab_label="Cerrar sesion"
                app:fab_colorNormal="@color/azulfront"
                app:fab_colorPressed="@color/moradofront"
                />


        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>